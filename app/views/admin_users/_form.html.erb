<%= form_for(@admin_user) do |f| %>
<%= error_messages_for(f.object) %>
    <table summary="Admin user form fields">
      <tr>
        <th>First Name</th>
        <td><%= f.text_field(:firstname) %></td>
      </tr>
      <tr>
        <th>Last Name</th>
        <td><%= f.text_field(:lastname) %></td>
      </tr>
      <tr>
        <th>Password</th>
        <td><%= f.password_field(:password) %></td>
      </tr>
      <tr>
        <th>Confirm Password</th>
        <td><%= f.password_field(:confirm_password) %></td>
      </tr>
      <tr>
        <th>Username</th>
        <td><%= f.text_field(:username) %></td>
      </tr>
       <tr>
        <th>Email id</th>
        <td><%= f.text_field(:email) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Update Admin User") %>
    </div>

  <% end %>